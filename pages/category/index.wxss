/* pages/list/list.wxss */
@import '../template/product-tpl.wxss';

page {
  height: 100%;
}

.list-container {
  display: flex;
}
.nav-bar {
  flex-shrink: 0;
  width: 149rpx;
  background-color: #fff;
  border-right: 1rpx solid #eee;
}
.nav-bar-item {
  position: relative;
  flex: 1;
  padding: 40rpx 0;
  box-sizing: border-box;
  height: 40rpx;
  text-align: center;
  font-size: 28rpx;
  line-height: 40rpx;
  color: #666;
}
.active {
  color: #f56d02;
}
 .nav-bar-item.active:after {
  content: "";  
  display: block;  
  position: absolute;
  top: 40rpx;
  left: 0;
  width: 6rpx;  
  height: 40rpx;
  background-color: #f56d02;
} 

.right {
  flex: 1;
  width: 600rpx;
  background-color: #fff;
}
/* 去除滚动条 */
::-webkit-scrollbar {
  width: 0;
  height: 0;
  color: transparent;
}

.category-wrapper {
  padding: 0 30rpx;
  box-sizing: border-box;
}

.category-title {
  display: flex;
  flex-direction: column;
  align-items: center;
  padding-top: 40rpx;
  box-sizing: border-box;
  width: 540rpx;
}
.category-title image {
  width: 540rpx;
  height: 200rpx;
}
.category-title text {
  margin-top: 15rpx;
  font-size: 28rpx;
  color: #999;
}

.category-list {
  display: flex;
  flex-wrap: wrap; 
}

.category {
  display: flex;
  flex-direction: column;
  align-items: center;
  margin: 15rpx;
  width: 150rpx;
}
.category image {
  width: 150rpx;
  height: 150rpx;
}
.category text {
  font-size: 28rpx;
  color: #999;
}
