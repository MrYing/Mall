/**index.wxss**/
@import "../template/product-tpl.wxss";

.search-wrapper {
  padding: 15rpx 40rpx;
  box-sizing: border-box;
  width: 100%;
  background-color: #f56d02;
  z-index: 2;
}

.search {
  display: flex;
  align-items: center;
  justify-content: center;
  padding: 19rpx;
  box-sizing: border-box;
  width: 670rpx;
  height: 76rpx;
  border: 1rpx solid #f2f2f2;
  background-color: rgba(255, 255, 255, .9);
  border-radius: 38rpx;
}

.search-img {
  width: 36rpx;
  height: 36rpx;
}
.search text {
  margin-left: 15rpx;
  font-size: 28rpx;
  color: #999;
}


.banner {
  width: 100%;
  height: 400rpx;
}

.slide-image {
  width: 100%;
  height: 400rpx;
}

.list-wrapper {
  display: flex;
  justify-content: space-between; 
  padding: 40rpx;
  box-sizing: border-box;
  width: 100%;
  background-color: #fff;
}

.list-item {
  display: flex;
  flex-direction: column;
  align-items: center;
  width: 120rpx;
}

.list-item image {
  width: 108rpx;
  height: 108rpx;
}

.list-item text {
  display: block;
  margin-top: 30rpx;
  font-size: 24rpx;
  text-align: center;
}

.ad {
  display: flex;
  justify-content: space-between;
  margin-top: 20rpx;
  width: 100%;
}
.ad image {
  width: 370rpx;
  height: 260rpx;
}

.product-wrapper {
  margin-top: 20rpx;
  box-sizing: border-box;
  width: 100%;
  background-color: #fff;
}

.heading {
  display: block;
  padding-left: 40rpx;
  box-sizing: border-box;
  height: 80rpx;
  font-size: 32rpx;
  line-height: 80rpx;
  color: #5e5e5e;
  font-weight: bold;
}

.category-img {
  width: 100%;
  height: 296rpx;
}

.product-list {
  display: flex;
  flex-wrap: wrap;
  justify-content: space-between;
  padding: 40rpx;
  box-sizing: border-box;
}

.no-goods-text {
  margin-top: 40rpx;
  font-size: 32rpx;
  line-height: 2.0;
  color: #999;
}
